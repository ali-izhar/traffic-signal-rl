<?xml version="1.0" encoding="UTF-8"?>
<connections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/connections_file.xsd">
    <!-- North to South (straight) -->
    <connection from="north_to_center" to="center_to_south" fromLane="0" toLane="0"/>
    <connection from="north_to_center" to="center_to_south" fromLane="1" toLane="1"/>
    
    <!-- North to East (right) -->
    <connection from="north_to_center" to="center_to_east" fromLane="0" toLane="0"/>
    
    <!-- North to West (left) -->
    <connection from="north_to_center" to="center_to_west" fromLane="1" toLane="1"/>
    
    <!-- South to North (straight) -->
    <connection from="south_to_center" to="center_to_north" fromLane="0" toLane="0"/>
    <connection from="south_to_center" to="center_to_north" fromLane="1" toLane="1"/>
    
    <!-- South to West (right) -->
    <connection from="south_to_center" to="center_to_west" fromLane="0" toLane="0"/>
    
    <!-- South to East (left) -->
    <connection from="south_to_center" to="center_to_east" fromLane="1" toLane="1"/>
    
    <!-- East to West (straight) -->
    <connection from="east_to_center" to="center_to_west" fromLane="0" toLane="0"/>
    <connection from="east_to_center" to="center_to_west" fromLane="1" toLane="1"/>
    
    <!-- East to North (right) -->
    <connection from="east_to_center" to="center_to_north" fromLane="0" toLane="0"/>
    
    <!-- East to South (left) -->
    <connection from="east_to_center" to="center_to_south" fromLane="1" toLane="1"/>
    
    <!-- West to East (straight) -->
    <connection from="west_to_center" to="center_to_east" fromLane="0" toLane="0"/>
    <connection from="west_to_center" to="center_to_east" fromLane="1" toLane="1"/>
    
    <!-- West to South (right) -->
    <connection from="west_to_center" to="center_to_south" fromLane="0" toLane="0"/>
    
    <!-- West to North (left) -->
    <connection from="west_to_center" to="center_to_north" fromLane="1" toLane="1"/>
</connections> 